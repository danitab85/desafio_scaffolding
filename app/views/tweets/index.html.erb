<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Tweets</h1>
    </div>

    <div class="col-md-6">
    <%= link_to 'New Tweet', new_tweet_path, class: "btn btn-success btn-block mt-5" %>

    </div>
  </div>
</div>


      <% @tweets.each do |tweet| %>
      <div class="card mb-3 mt-4 text-center" style="max-width: 540px;">
      <div class="row">
        <div class="col-md-4">
        <%= image_tag "dani.jpeg", class: "rounded rounded-circle mt-3 ml-3", width: "140", height: "140" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= tweet.title %></h5>
            <p class="card-text"><%= tweet.content %></p>
            <%= link_to 'Show', tweet, class: 'btn btn-success' %>
            <%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-success' %>
            <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-success' %>
            <br
            <small class="text-muted"><%= time_ago_in_words tweet.updated_at %></small>
          </div>
        </div>
      </div>
    </div>
    <% end %>









